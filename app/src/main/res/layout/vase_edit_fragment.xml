<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.vase.vaseEdit.VaseEditFragment">
    <ImageView
        android:id="@+id/imageViewEditVase"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/text"
        android:layout_marginTop="5dp" />

    <EditText
        android:id="@+id/editTextVasaName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter vasa name" />

    <EditText
        android:id="@+id/editTextVasaDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:textAlignment="viewStart"
        android:hint="Enter vase description"
        android:inputType="textMultiLine"
         />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save edit" />


</LinearLayout>